{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */
    "allowJs": true,
    "baseUrl": "./",
    "checkJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "paths": {
      "@errors/*": [
        "./src/errors/*"
      ],
      "@helpers/*": [
        "./src/helpers/*"
      ],
      "@serverEntities/*": [
        "./src/server/entities/*"
      ],
      "@serverRepositories/*": [
        "src/server/repositories/*"
      ],
      "@serverUseCases/*": [
        "./src/server/services/*"
      ],
      "@UIPages/*": [
        "./src/UI/pages/*"
      ],
      "@UIShared/*": [
        "./src/UI/shared/*"
      ]
    },
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2016",
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom"
    ],
    "useUnknownInCatchVariables": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
